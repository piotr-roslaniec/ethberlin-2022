    "@web3-react/walletconnect-connector": "^6.2.13",
    "ethers": "^5.7.1",
    "file-loader": "^6.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.0",
    "react-scripts": "5.0.1",
    "styled-components": "^5.3.5",
    "web-vitals": "^2.1.4",
    "web3modal": "^1.9.9",
    "zksync-exit": "workspaces:*"
